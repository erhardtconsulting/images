{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": ["nextcloud/Dockerfile"],
      "matchStrings": [
        "ARG PHP_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "php",
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^(?<version>[0-9.]+)-fpm-alpine"
    },
    {
      "fileMatch": ["nextcloud/Dockerfile"],
      "matchStrings": [
        "ARG SUPERCRONIC_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "aptible/supercronic",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "^(?<version>.*)$"
    },
    {
      "fileMatch": ["nextcloud/Dockerfile"],
      "matchStrings": [
        "ARG NEXTCLOUD_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "nextcloud/server",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}